{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "env": [
    "DATABASE_URL",
    "NODE_ENV"
  ],
  "functions": {
    "server/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "timeout": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
